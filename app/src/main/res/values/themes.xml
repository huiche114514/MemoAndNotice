<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.通知备忘" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="backgroundColor">@color/colorBackground</item>
        <item name="android:statusBarColor">@color/colorBar</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:textColor">@color/colorText</item>
    </style>
    <style name="CustomAlertDialog" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="Compat_title">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Compat_content">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="click_Compat">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/button_ripple_bg</item>
    </style>
    <style name="Theme.通知备忘" parent="Base.Theme.通知备忘" />
</resources>