<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/L_R_dimen"
    android:background="?attr/backgroundColor"
    tools:context=".InfoActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/Toolbar_dimen"
        android:text="@string/layout_name"
        android:gravity="left|center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimaryDark"
        tools:ignore="HardcodedText,RelativeOverlap,RtlHardcoded">
    </TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/background_bg">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/ic_launcher"
            android:layout_centerHorizontal="true"
            tools:ignore="ContentDescription,ImageContrastCheck">
        </ImageView>
        <TextView
            android:id="@+id/Egg"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="125dp"
            android:text="@string/app_name"
            android:textColor="?attr/colorPrimaryDark"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck">
        </TextView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:orientation="vertical"
        android:paddingVertical="10dp"
        android:paddingHorizontal="@dimen/Text_L_R_dimen"
        android:background="@drawable/background_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="@string/app_info_name"
            android:textColor="?attr/colorPrimaryDark"
            android:textSize="18sp"
            tools:ignore="HardcodedText,RelativeOverlap,TextSizeCheck">
        </TextView>
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp">
        </Space>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/version_name"
                android:textColor="?attr/colorPrimaryDark"
                android:textSize="16sp"
                tools:ignore="HardcodedText,TextSizeCheck">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:text="@string/version_number_name"
                android:textColor="?attr/colorPrimaryDark"
                android:textSize="14sp"
                tools:ignore="HardcodedText,RelativeOverlap,TextSizeCheck">
            </TextView>
        </RelativeLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp">
        </Space>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/builder_name"
                android:textColor="?attr/colorPrimaryDark"
                android:textSize="16sp"
                tools:ignore="HardcodedText,TextSizeCheck">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:text="@string/dev_name"
                android:textColor="?attr/colorPrimaryDark"
                android:textSize="14sp"
                tools:ignore="HardcodedText,RelativeOverlap,TextSizeCheck">
            </TextView>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:background="@drawable/background_bg"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/tgChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/button_ripple_bg"
            android:paddingHorizontal="@dimen/Text_L_R_dimen"
            android:paddingVertical="5dp"
            tools:ignore="UselessParent,TextSizeCheck">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="@string/qqChat"
                android:textColor="?attr/colorPrimaryDark"
                android:textSize="18sp"
                tools:ignore="RtlSymmetry,TextSizeCheck">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="@string/qqChatHint"
                android:textColor="?attr/colorPrimaryDark"
                android:textSize="14sp"
                tools:ignore="RelativeOverlap,TextSizeCheck">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Github"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/button_ripple_bg"
            android:paddingHorizontal="@dimen/Text_L_R_dimen"
            android:paddingVertical="5dp"
            tools:ignore="UselessParent,TextSizeCheck">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="@string/github"
                android:textColor="?attr/colorPrimaryDark"
                android:textSize="18sp"
                tools:ignore="RtlSymmetry,TextSizeCheck">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="@string/githubHint"
                android:textColor="?attr/colorPrimaryDark"
                android:textSize="14sp"
                tools:ignore="RelativeOverlap,TextSizeCheck">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/button_ripple_bg"
            android:paddingHorizontal="@dimen/Text_L_R_dimen"
            android:paddingVertical="5dp"
            tools:ignore="UselessParent,TextSizeCheck">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="@string/ty"
                android:textColor="?attr/colorPrimaryDark"
                android:textSize="18sp"
                tools:ignore="RtlSymmetry,TextSizeCheck">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="@string/tyHint"
                android:textColor="?attr/colorPrimaryDark"
                android:textSize="14sp"
                tools:ignore="RelativeOverlap,TextSizeCheck">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>